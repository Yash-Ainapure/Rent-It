<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    tools:context=".UploadNewProduct">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/productImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:text="Product Details"
            android:textColor="@color/btnbg"

            android:textSize="16dp"
            android:textStyle="bold" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/circular"
            android:layout_marginHorizontal="30dp"
            android:src="@drawable/placeholderpht"/>

        <Button
            android:id="@+id/btnUploadImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/btn_bg"

            android:layout_marginHorizontal="80dp"
            android:text="upload new image"
      />

        <EditText
            android:id="@+id/etProductName"
            style="@style/edit_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name" />

        <EditText
            android:id="@+id/etProductPrice"
            style="@style/edit_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:inputType="number" />

        <EditText
            android:id="@+id/etProductDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/edit_txt"
            android:hint="Description" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:text="Set Rent Duration"
            android:textStyle="bold"

            android:textColor="@color/btnbg"
            android:textSize="16dp" />

        <NumberPicker
            android:id="@+id/numberPickerRooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:background="@color/white" />

        <Button
            android:id="@+id/btnUploadProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/btn_bg"
            android:text="Upload Product"
         />

    </LinearLayout>
</ScrollView>

</LinearLayout>